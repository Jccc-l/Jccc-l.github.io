    .sidebar-dimmer{
        background: rgba(0, 0, 0, 0)
    }

    /* 设置小屏幕下侧边栏图标颜色 */
    .sidebar .fa, .sidebar .fab {
        color: #3d788e;
    }

    /* 设置小屏幕下网站描述文字颜色 */
    .site-description {
        color: #555555;
    }

    /* 设置小屏幕下站点状态项数量颜色 */
    .site-state-item-count {
        color: #3d788e;
    }

    /* 设置小屏幕下站点状态项名称颜色和加粗 */
    .site-state-item-name {
        color: #555555;
        font-weight: bold;
    }

    /* 设置小屏幕下导航链接样式 */
    .nav-text {
        /* color: ; */
    }

    /* 设置小屏幕下导航链接悬停时的下划线 */
    .nav-link {
        border-bottom: none;
    }

    /* 设置小屏幕下导航链接悬停时的下划线 */
    .nav-link:hover {
        border-bottom: 1px solid currentColor;
    }

    /* 设置小屏幕下文章目录链接颜色 */
    .post-toc .nav > a {
        color: #3d788e;
    }

    /* 设置小屏幕下文章目录激活状态下的链接颜色 */
    .post-toc .nav .active > a {
        border-bottom-color: #3d788e;
        color: #3d788e;
    }

    /* 设置小屏幕下文章目录激活状态下链接悬停时的颜色 */
    .post-toc .nav .active > a:hover {
        border-bottom: 1px solid currentColor;
        border-bottom-color: #fc6423;
        color: #fc6423;
    }

    /* 设置小屏幕下侧边栏目录激活状态下的颜色 */
    .sidebar-toc-active .sidebar-nav-toc, .sidebar-overview-active .sidebar-nav-overview {
        border-bottom-color: #3d788e;
        color: #3d788e;
        transition-delay: 0.2s;
    }
}

/* 设置弹出框透明度 */
.popup {
    opacity: 0.9;
}

/* 设置头部区域背景颜色和透明度 */
.header-inner {
	background: rgba(255, 255, 255, 0.7);
}

/* 设置页脚文字颜色 */
.footer-inner {
    color: #555555;
}

.box {
    width: 100%;
    /* 因为 content 会另起一行，影响样式的话，height 设置为具体的值可以避免高度变高的情况 */
    height: 100%;
    /* 设置元素两端对齐 */
    text-align: justify;
}
 
/* 这里的伪元素一定要加上，不然span元素不能两端对齐 */			
.box:after {
    content: "";
    display: inline-block;
    overflow: hidden;
    width: 100%;
}

