/* 设置背景图片 */
body {
    background: url(/images/background.jpg) no-repeat fixed;
    background-size: cover;
    background-position: center;
}

/* 设置主要区域的背景颜色和透明度 */
.main-inner > .sub-menu,
.main-inner > .post-block,
.main-inner > .tabs-comment,
.main-inner > .comments,
.main-inner > .pagination {
    background: rgba(245, 245, 245, 0.8);
}

/* 设置文字颜色 */
body {
    color: #000;
}

/* 设置文章标题颜色 */
.posts-expand .post-title-link {
    color: #222;
}

/* 设置文章元数据颜色 */
.posts-expand .post-meta-container {
    color: #62a7b6;
}

/* 设置图片透明度 */
img {
    opacity: 1;
}

/* 设置表格容器透明度 */
.table-container {
    opacity: 1;
}

/* 大屏幕设备样式 */
@media (min-width: 768px) {
    /* 设置侧边栏背景颜色和文字颜色 */
    .sidebar-inner {
        background: rgba(245, 245, 245, 0.7);
        color: #3d788e;
    }

    /* 设置侧边栏图标颜色 */
    .sidebar .fa, .sidebar .fab {
        color: #3d788e;
    }

    /* 设置网站描述文字颜色 */
    .site-description {
        color: #555555;
    }

    /* 设置站点状态项数量颜色 */
    .site-state-item-count {
        color: #3d788e;
    }

    /* 设置站点状态项名称颜色和加粗 */
    .site-state-item-name {
        color: #555555;
        font-weight: bold;
    }

    /* 设置导航链接样式 */
    .nav-text {
    }

    /* 设置导航链接的下划线 */
    .nav-link {
        border-bottom: none;
		color: #888888;
    }

    /* 设置导航链接悬停时的下划线 */
    .nav-link:hover {
        border-bottom: 1px solid currentColor;
        color: #fc6423;
    }

    /* 设置文章目录链接颜色 */
    .post-toc .nav > a {
        color: #3d788e;
    }

    /* 设置文章目录激活状态下的链接颜色 */
    .post-toc .nav .active > a {
        border-bottom-color: #3d788e;
        color: #20b2aa;
    }

    /* 设置文章目录激活状态下链接悬停时的颜色 */
    .post-toc .nav .active > a:hover {
        border-bottom-color: #fc6423;
        color: #fc6423;
    }

    /* 设置侧边栏目录激活状态下的颜色 */
    .sidebar-toc-active .sidebar-nav-toc, .sidebar-overview-active .sidebar-nav-overview {
        border-bottom-color: #20b2aa;
        color: #20b2aa;
        transition-delay: 0.2s;
    }
}

/* 小屏幕设备样式 */
